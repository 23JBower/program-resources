import os
import requests

url = "https://raw.githubusercontent.com/23JBower/program-resources/refs/heads/2.0.0---Unstable/"
verified1 = False
verified2 = False
verified3 = False

if requests.get(f"{url}dbms").status_code == 200:
    print("First time setup...")
    while verified1 == False:
        print("Downloading dbms.py")

        f = open("dbms.py", "w")
        f.write(requests.get(f"{url}dbms").text)
        f.close()

        f = open("dbms.py", "r")
        print("Verifying dbms.py...")
        if f.read() == requests.get(f"{url}dbms").text:
            verified1 = True
            print("dbms.py successfully downloaded")
        else:
            print("Download verification failed, retrying")
else:
    print("Download link for 'dbms 2.0.0---Unstable' returned HTTP code", requests.get(f"{url}dbms").status_code)

if requests.get(f"{url}user").status_code == 200:
    while verified2 == False:
        print("Downloading user.py")

f = open("user.py", "w")
f.write(requests.get(f"{url}user").text)
f.close()

f = open("user.py", "r")
print("Verifying dbms.py...")
        if f.read() == requests.get(f"{url}user").text:
            verified2 = True
            print("user.py successfully downloaded")
        else:
            print("Download verification failed, retrying")
else:
    print("Download link for 'user 2.0.0---Unstable' returned HTTP code", requests.get(f"{url}dbms").status_code)

os.remove("setup.py")
